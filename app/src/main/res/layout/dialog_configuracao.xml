<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center|right"
            android:paddingRight="15dp"
            android:text="@string/propriedade"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inpDialogConfiguracaoPropriedade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="6"
            android:gravity="center|left"
            android:textSize="15dp"
            android:paddingRight="10dp"
            android:hint="@string/digite_propriedade_configuracao"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center|right"
            android:paddingRight="15dp"
            android:text="@string/valor"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inpDialogConfiguracaoValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="6"
            android:gravity="center|left"
            android:textSize="15dp"
            android:paddingRight="10dp"
            android:hint="@string/digite_o_valor_configuracao"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>