<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="@string/desligar_todas_as_notificacoes"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Tem certeza que deseja desligar todas as notificações?"
            android:gravity="center"
            android:inputType="text"
            android:textColor="#ff0000"
            android:textSize="12sp" />

<View
    android:layout_width="match_parent"
    android:layout_height="20dp"/>

        <TextView
            android:id="@+id/txtDeligarNotificacao"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#f2f2f2"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_alarm_off_black_24dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/desligar"/>

    </LinearLayout>


</LinearLayout>